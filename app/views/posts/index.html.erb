<%= link_to 'Create new post', new_post_path %><br>
<%if @posts.present?%>
<h1>Posts</h1>
<table class='table'>
  <thead>
    <tr>
      <th>Post Title</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <%if post.created_by == current_user.id%>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
 <h1>No posts Available</h1>
<%end%>
